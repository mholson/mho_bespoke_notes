%=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
%	PACKAGE OPTIONS & SETUP
%=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{mhotables}[2021/07/21 A small tabularray customization package.]


% > > > Tables
\RequirePackage{tabularray}
\UseTblrLibrary{diagbox}  % Enable diagonal boxes
\UseTblrLibrary{booktabs} % Support for booktabs


% > > > Table of values commands to be used with tabularray
\NewTableCommand\cellRed{\SetCell{bg=Red,fg=SnowI}}
\NewTableCommand\cellGreen{\SetCell{bg=Green,fg=SnowI}}
\NewTableCommand\cellPurple{\SetCell{bg=Purple,fg=SnowI}}
\NewTableCommand\cellOrange{\SetCell{bg=Orange,fg=SnowI}}
\NewTableCommand\cellTeal{\SetCell{bg=Teal,fg=SnowI}}
\NewTableCommand\cellGrey{\SetCell{bg=Grey}}


%  END =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
%=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
\endinput
