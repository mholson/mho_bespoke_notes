\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{mhocodestyle}
    [2021/06/11 Using listings pkg with some style]

\tcbset{
    docexample/.style = {
        bicolor,
        colframe=nordZero,
        colback=nordFour,
        colbacklower=nordSix,
        sharp corners,
        before skip=\medskipamount,
        after skip=\medskipamount,
        fontlower=\footnotesize
        },
    skin=enhanced,
      doc head={colback=nordSix,interior style=fill},
      doc head key={colback=nordThirteen,interior style=fill},
      doc head path={colback=nordFourteen,interior style=fill},
      color command=nordEleven,
      color option=nordTen,
      color key=nordEleven,
      color value=nordTen,
      color color=NordTen,
      color counter=nordTen,
      color length=nordTen,
    } 
        
\newtcblisting{mhotexbox}{
    colback=\cnBGGrey, 
    colframe=\cnBlack}
    
\newtcblisting{mhotexboxcode}{
    colback=\cnBGGrey, 
    colframe=\cnBlack,
    listing only}

