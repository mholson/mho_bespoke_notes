\RequirePackage{amsthm} % Mathematical environments
\RequirePackage{thmtools} % Theorem styles
\RequirePackage[framemethod=TikZ]{mdframed}

\newenvironment{verbetering}{\begin{tcolorbox}[
    arc=0mm,
    colback=white,
    colframe=green!60!black,
    title=Box Title,
    fonttitle=\sffamily,
    breakable
]}{\end{tcolorbox}}

