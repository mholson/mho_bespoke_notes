\theoremstyle{definition}
\declaretheoremstyle[
    headfont=\bfseries\sffamily\cfBlue, bodyfont=\normalfont,
    mdframed={
        linewidth=2pt,
        rightline=false, topline=false, bottomline=false,
        linecolor=Blue, backgroundcolor=GreyIII,
        skipabove=1\baselineskip, skipbelow=0\baselineskip,
    }
]{thmdefnbox}

\declaretheoremstyle[
    headfont=\bfseries\sffamily\cfTeal, bodyfont=\normalfont,
    mdframed={
        linewidth=2pt,
        rightline=false, topline=false, bottomline=false,
        linecolor=Teal, backgroundcolor=GreyIII,
        skipabove=1\baselineskip, skipbelow=0\baselineskip,
    }
]{thmexamplebox}

\declaretheoremstyle[
    headfont=\bfseries\sffamily\cfLightTeal,
    bodyfont=\normalfont,
    numbered=no,
    mdframed={
        linewidth=2pt,
        rightline=false, topline=false, bottomline=false,
        linecolor=LightTeal,
        skipabove=1\baselineskip, skipbelow=0\baselineskip, 
    },
    qed={\(\cTeal{\square}\)}
]{thmsolnbox}

\declaretheoremstyle[
    headfont=\bfseries\sffamily\cfRed, bodyfont=\normalfont,
    mdframed={
        linewidth=2pt,
        rightline=false, topline=false, bottomline=false,
        linecolor=Red, backgroundcolor=GreyIII,
        skipabove=1\baselineskip, skipbelow=0\baselineskip,
    }
]{thmtheorembox}

\declaretheoremstyle[
    headfont=\bfseries\sffamily\cfPurple, bodyfont=\normalfont,
    mdframed={
        linewidth=2pt,
        rightline=false, topline=false, bottomline=false,
        linecolor=Purple, backgroundcolor=GreyIII,
        skipabove=1\baselineskip, skipbelow=0\baselineskip,
    }
]{thmnotationbox}

\declaretheoremstyle[
    headfont=\bfseries\sffamily\cfSteelI, bodyfont=\normalfont,
    mdframed={
        linewidth=2pt,
        rightline=false, topline=false, bottomline=false,
        linecolor=SteelI, backgroundcolor=GreyIII,
        skipabove=1\baselineskip, skipbelow=0\baselineskip,
    }
]{thmalgobox}

\declaretheoremstyle[
    headfont=\bfseries\sffamily\cfLightRed, bodyfont=\normalfont,
    numbered=no,
    mdframed={
        linewidth=2pt,
        rightline=false, topline=false, bottomline=false,
        linecolor=LightRed,
        skipabove=1\baselineskip, skipbelow=0\baselineskip, 
    },
    qed=\qedsymbol
]{thmproofbox}

\declaretheoremstyle[
    headfont=\bfseries\sffamily\cfBlue, bodyfont=\normalfont,
    mdframed={
        linewidth=2pt,
        rightline=false, topline=false, bottomline=false,
        linecolor=Blue
    }
]{thmblueline}

\declaretheoremstyle[
    headfont=\bfseries\sffamily\cfTeal, bodyfont=\normalfont,
    mdframed={
        linewidth=2pt,
        rightline=false, topline=false, bottomline=false,
        linecolor=Teal
    }
]{thmgreenline}

