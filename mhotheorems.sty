\declaretheorem[style=thmdefnbox, name=Definition]{definition}
\declaretheorem[style=thmdefnbox, name=Assumption]{assumption}
\declaretheorem[style=thmdefnbox, name=Verb]{verbs}
\declaretheorem[style=thmdefnbox, name=Noun]{nouns}
\declaretheorem[style=thmdefnbox, name=Adjective]{adjectives}
\declaretheorem[style=thmdefnbox, name=Preposition]{preposition}
\declaretheorem[style=thmdefnbox, numbered=no, name=Objective]{objective}
\declaretheorem[style=thmexamplebox, name=Example]{swexample}
\declaretheorem[style=thmexamplebox, name=Example]{example}
\declaretheorem[style=thmtheorembox, name=Proposition]{proposition}
\declaretheorem[style=thmtheorembox, name=Conjecture]{conjecture}
\declaretheorem[style=thmtheorembox, name=Law]{alaw}
\declaretheorem[style=thmtheorembox, name=Rule]{arule}
\declaretheorem[style=thmtheorembox, name=Property]{property}
\declaretheorem[style=thmtheorembox, name=Theorem]{theorem}
\declaretheorem[style=thmalgobox, name=Algorithm]{algo}
\declaretheorem[style=thmtheorembox, name=Axiom]{axiom}
\declaretheorem[style=thmtheorembox, numbered=no, name=Corollary]{corollary}

\declaretheorem[style=thmproofbox, name=Proof]{replacementproof}
\renewenvironment{proof}[1][\proofname]{\vspace{-10pt}\begin{replacementproof}}{\end{replacementproof}}

\declaretheorem[style=thmsolnbox, name=Solution]{tmpsoln}
\newenvironment{solution}[1][]{\vspace{-10pt}\begin{tmpsoln}}{\end{tmpsoln}}

\declaretheorem[style=thmblueline, numbered=no, name=Remark]{remark}
\declaretheorem[style=thmnotationbox, numbered=no, name=Notation]{notation}
\declaretheorem[style=thmblueline, numbered=no, name=Note]{note}

\renewcommand{\qedsymbol}{\(\cRed{\blacksquare}\)}

